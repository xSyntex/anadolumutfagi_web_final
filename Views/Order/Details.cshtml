@model Web_Programlama_Proje.Models.Order

@{
    ViewData["Title"] = "Sipariş Detayı";
}

<div class="row mt-5">
    <div class="col-md-8 offset-md-2">
        <div class="card bg-dark border-secondary shadow">
            <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Sipariş #@Model.Id</h4>
                <span class="fw-bold">@Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</span>
            </div>
            <div class="card-body">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>Ürün</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Toplam</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@(item.MenuItem?.Title ?? "Silinmiş Ürün")</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price.ToString("C")</td>
                                <td>@((item.Quantity * item.Price).ToString("C"))</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end fw-bold">TOPLAM:</td>
                            <td class="text-warning fw-bold fs-5">@Model.TotalAmount.ToString("C")</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="card-footer bg-transparent border-secondary text-center">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Siparişlerime Dön
                </a>
            </div>
        </div>
    </div>
</div>
