@model IEnumerable<Web_Programlama_Proje.Models.Order>

@{
    ViewData["Title"] = "Siparişlerim";
}

<div class="row mt-5">
    <div class="col-12">
        <h2 class="text-warning border-bottom border-warning pb-2 mb-4">Sipariş Geçmişim</h2>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Sipariş No</th>
                            <th>Tarih</th>
                            <th>Tutar</th>
                            <th>Detay</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>#@order.Id</td>
                                <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="text-warning fw-bold">@order.TotalAmount.ToString("C")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-light">
                                        <i class="fas fa-eye"></i> İncele
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-secondary text-center">
                Henüz bir siparişiniz bulunmuyor. <a asp-controller="Menu" asp-action="PublicMenu" class="alert-link">Hemen sipariş ver!</a>
            </div>
        }
    </div>
</div>
