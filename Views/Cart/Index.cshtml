@model Web_Programlama_Proje.Models.Cart

@{
    ViewData["Title"] = "Sepetim";
}

<div class="row pt-4">
    <div class="col-12">
        <h2 class="text-warning border-bottom border-warning pb-2">Sepetim</h2>
        
        @if(TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model.Items.Count() > 0)
        {
            <table class="table table-dark table-hover mt-4">
                <thead>
                    <tr>
                        <th>Ürün</th>
                        <th>Adet</th>
                        <th>Fiyat</th>
                        <th>Ara Toplam</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var line in Model.Items)
                    {
                        <tr>
                            <td class="align-middle">@line.MenuItem?.Title</td>
                            <td class="align-middle">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Decrease" asp-route-id="@line.MenuItem?.Id" class="btn btn-outline-warning text-white">-</a>
                                    <span class="btn btn-dark disabled text-white border-secondary" style="width: 40px;">@line.Quantity</span>
                                    <a asp-action="Increase" asp-route-id="@line.MenuItem?.Id" class="btn btn-outline-warning text-white">+</a>
                                </div>
                            </td>
                            <td class="align-middle">@((line.MenuItem?.Price ?? 0).ToString("c"))</td>
                            <td class="align-middle">@((line.Quantity * (line.MenuItem?.Price ?? 0)).ToString("c"))</td>
                            <td class="align-middle">
                                <a asp-action="RemoveFromCart" asp-route-id="@line.MenuItem?.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end fw-bold">Genel Toplam:</td>
                        <td class="text-warning fw-bold fs-5">@Model.ComputeTotalValue().ToString("c")</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>

            <div class="text-center mt-4">
                <a asp-controller="Menu" asp-action="PublicMenu" class="btn btn-outline-secondary me-2">Alışverişe Devam Et</a>
                <a asp-action="Checkout" class="btn btn-gold btn-lg shadow">Siparişi Tamamla</a>
            </div>
        }
        else
        {
            <div class="text-center mt-5">
                <i class="fas fa-shopping-basket fa-4x text-muted mb-3"></i>
                <p class="lead text-light">Sepetinizde ürün bulunmamaktadır.</p>
                <a asp-controller="Menu" asp-action="PublicMenu" class="btn btn-gold mt-3">Menüyü İncele</a>
            </div>
        }
    </div>
</div>
