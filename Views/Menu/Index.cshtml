@model IEnumerable<Web_Programlama_Proje.Models.MenuItem>

@{
    ViewData["Title"] = "Yönetim Paneli";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-white"><i class="fas fa-cogs me-2"></i>Menü Yönetim Paneli</h2>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus me-1"></i>Yeni Yemek Ekle</a>
</div>

<div class="card bg-dark border-secondary">
    <div class="card-body p-0">
        <table class="table table-dark table-hover table-striped mb-0">
            <thead class="thead-light">
                <tr>
                    <th>Görsel</th>
                    <th>Yemek Adı</th>
                    <th>Kategori</th>
                    <th>Fiyat</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td style="width: 100px;">
                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://via.placeholder.com/50" : item.ImageUrl)" 
                             class="rounded" style="width: 60px; height: 60px; object-fit: cover;" />
                    </td>
                    <td class="align-middle fw-bold">@item.Title</td>
                    <td class="align-middle"><span class="badge bg-secondary">@item.Category</span></td>
                    <td class="align-middle text-warning">@item.Price ₺</td>
                    <td class="align-middle text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">Düzenle</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Detay</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>