@model IEnumerable<Web_Programlama_Proje.Models.MenuItem>

@{
    ViewData["Title"] = "Menü";
}

<div class="text-center mb-5">
    <h1 class="display-4 text-warning">Anadolu Mutfağı Menüsü</h1>
    <p class="lead">Özenle hazırlanan lezzetlerimizi keşfedin.</p>
</div>

@if(TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@{
    var categories = Model.GroupBy(x => x.Category).ToList();
}

@foreach (var categoryGroup in categories)
{
    <div class="mb-5">
        <h2 class="text-warning border-bottom border-secondary pb-2 mb-4">@categoryGroup.Key</h2>
        <div class="row">
            @foreach (var item in categoryGroup)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-secondary bg-dark text-white">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center bg-secondary text-white" style="height: 250px;">
                                <i class="fas fa-camera fa-3x"></i>  <!-- Placeholder Icon -->
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-warning">@item.Title</h5>
                            <p class="card-text flex-grow-1 text-light">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="fs-5 fw-bold text-warning">@item.Price.ToString("C")</span>
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                    <i class="fas fa-plus"></i> Sepete Ekle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        Henüz menüde yemek bulunmuyor. Lütfen daha sonra tekrar kontrol ediniz.
    </div>
}
