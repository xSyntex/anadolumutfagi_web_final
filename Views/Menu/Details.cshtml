@model Web_Programlama_Proje.Models.MenuItem

@{
    ViewData["Title"] = "Detaylar";
}

<h1 class="text-warning">Detaylar</h1>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
             <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/400x300?text=Resim+Yok" : Model.ImageUrl)" 
                  class="img-fluid rounded border border-warning" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class = "col-sm-3">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class = "col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class = "col-sm-3">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class = "col-sm-9">
                    @Html.DisplayFor(model => model.Price) TL
                </dd>
                <dt class = "col-sm-3">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class = "col-sm-9">
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt class = "col-sm-3">
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </dt>
                <dd class = "col-sm-9">
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>
            </dl>
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-gold">Düzenle</a> 
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </div>
    </div>
</div>
