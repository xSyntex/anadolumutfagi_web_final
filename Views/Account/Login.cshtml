@{
    ViewData["Title"] = "Yönetici Girişi";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card bg-dark border-secondary shadow-lg">
            <div class="card-header bg-black text-center border-bottom border-secondary">
                <h3 class="text-warning mb-0"><i class="fas fa-lock"></i> Giriş Yap</h3>
            </div>
            <div class="card-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label class="form-label text-light">Ad Soyad</label>
                        <input name="username" type="text" class="form-control bg-secondary text-white border-0" required placeholder="Adınız Soyadınız" />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Şifre</label>
                        <input type="password" class="form-control bg-secondary text-white border-0" id="password" name="password" required />
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning fw-bold">Giriş Yap</button>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-black border-secondary text-center">
                <span class="text-muted">Hesabınız yok mu? </span>
                <a asp-action="Register" class="text-warning fw-bold text-decoration-none">Kayıt Ol</a>
                <br />
                <small class="text-muted">Anadolu Mutfağı Yönetim Paneli</small>
            </div>
        </div>
    </div>
</div>
